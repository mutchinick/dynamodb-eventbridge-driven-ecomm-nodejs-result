@simulateRawEventBaseUrl = {{$dotenv TESTING_API_BASE_URL}}

@orderId = ORD001

### ORDER_PLACED_EVENT
### POST ###
POST {{simulateRawEventBaseUrl}}/api/v1/testing/simulateRawEvent
Origin: https://localhost
Content-Type: application/json

{
  "pk": "EVENTS#ORDER_ID#{{orderId}}",
  "sk": "EVENT#ORDER_PLACED_EVENT",
  "eventName": "ORDER_PLACED_EVENT",
  "eventData": {
    "orderId": "{{orderId}}",
    "sku": "ORANGES",
    "units": 2,
    "price": 22.99,
    "userId": "123456"
  }
}

